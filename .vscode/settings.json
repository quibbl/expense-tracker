{
    // Use workspace-local Prettier config instead of an absolute path from another machine
    "prettier.configPath": ".prettierrc",
    "prettier.useTabs": true,
    "editor.formatOnSave": false,
    "files.autoSaveDelay": 0,
    "eslint.run": "onType",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ]
}